{
  "name": "tty-strings",
  "version": "1.2.0",
  "description": "Tools for working with strings displayed in the terminal",
  "keywords": [
    "tty",
    "terminal",
    "console",
    "cli",
    "ansi",
    "escape",
    "string",
    "unicode",
    "grapheme",
    "symbol",
    "character",
    "emoji",
    "width",
    "wrap",
    "wordwrap",
    "slice"
  ],
  "main": "lib/index.js",
  "types": "index.d.ts",
  "files": [
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "prepublishOnly": "yarn test",
    "update-browserslist": "browserslist --update-db",
    "screencasts": "node tasks/screencasts.js"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/tty-strings.git"
  },
  "commitlint": {
    "extends": [
      "@lcooper"
    ]
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "noStackTrace": true,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ]
  },
  "dependencies": {
    "ansi-regex": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@lcooper/commitlint-config": "^2.0.0",
    "@lcooper/eslint-config": "^2.1.0",
    "@lcooper/eslint-config-jest": "^1.1.1",
    "chalk": "^4.1.1",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsdoc": "^35.4.0",
    "husky": "^9.0.11",
    "jest": "^27.0.4",
    "lint-staged": "^15.2.2",
    "svg-term": "^1.3.1",
    "svgo": "^2.3.0"
  }
}
